<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/Background2"
    android:id="@+id/cardV">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="4dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/displayImagePost"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/profileperson"
            app:civ_border_color="@color/cardColor"
            app:civ_border_width="1dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="parent"></de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/textDisplayNamePost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/displayImage"
            android:layout_marginStart="22dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="22dp"
            android:layout_marginRight="22dp"
            android:layout_toEndOf="@+id/displayImagePost"
            android:layout_toRightOf="@+id/displayImagePost"
            android:text="Line 2"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/textCreatedAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textDisplayNamePost"
            android:layout_marginStart="22dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="22dp"
            android:layout_marginRight="22dp"
            android:layout_toEndOf="@+id/displayImagePost"
            android:layout_toRightOf="@+id/displayImagePost"
            android:text="Line 2"
            android:textColor="@color/white"
            android:textSize="12sp" />
        <View
            android:id="@+id/div"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/cardColor"
            android:layout_alignTop="@id/textCreatedAt"
            android:layout_marginTop="35dp"></View>
        <TextView
            android:id="@+id/postText"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="post text"
            android:textSize="18sp"
            android:fontFamily="@font/bree_serif"
            android:textColor="@color/white"
            android:layout_alignTop="@id/div"></TextView>

        <ImageView
            android:id="@+id/likeBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_baseline_thumb_up_24"
            android:layout_marginBottom="10dp"
            ></ImageView>

    </RelativeLayout>
</androidx.cardview.widget.CardView>